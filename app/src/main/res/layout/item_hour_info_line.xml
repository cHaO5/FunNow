<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:paddingEnd="10dp"
    android:paddingStart="16dp"
    android:paddingTop="16dp">

    <ImageView android:layout_width="12dp"
               android:layout_height="12dp"
               android:src="@mipmap/icon_time"/>
    <TextView
        android:id="@+id/one_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="16:00"/>

    <ImageView android:layout_width="12dp"
               android:layout_height="12dp"
               android:src="@mipmap/icon_temp"/>

    <TextView
        android:id="@+id/one_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="12Â°"/>

    <ImageView android:layout_width="12dp"
               android:layout_height="12dp"
               android:src="@mipmap/icon_humidity"/>

    <TextView
        android:id="@+id/one_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="81%"/>

    <ImageView android:layout_width="12dp"
               android:layout_height="12dp"
               android:src="@mipmap/icon_wind"/>

    <TextView
        android:id="@+id/one_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="14Km"/>

</LinearLayout>